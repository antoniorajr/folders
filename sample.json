{
    "Defaults" : {
        "Application" : "DEMO_CICD",
        "SubApplication" : "EXAMPLE_CICD",
        "RunAs" : "workbench",
        "Host" : "workbench"
    },

    "WorkbenchSampleFlow": {
        "Type": "Folder",
   
        "GetPosts": {
            "Type": "Job:Command",
            "Command": "curl https://jsonplaceholder.typicode.com/posts/1>C:\democtm\posts.jsonn"
           
        },

        "GetComments": {
            "Type": "Job:Command",
          	"Command": "curl https://jsonplaceholder.typicode.com/comments/1>C:\democtm\comments.json"
         },

		"GetPhotos": {
            "Type": "Job:Command",
          	"Command": "curl https://jsonplaceholder.typicode.com/photos/1>C:\democtm\photos.json"
         },


		"DoSometingWithIt" :{
			"Type": "Job:Command",
          	"Command": "cat /home/workbench/ctm/runtime/posts.json>>C:\democtm\all_in_one_file.json|cat C:\democtm\comments.json>>C:\democtm\all_in_one_file.json|cat C:\democtm\photos.json>>C:\democtm\all_in_one_file.json"
         },

		"CleanUpTheMess" :{
			"Type": "Job:Command",
          	"Command": "rm C:\democtm\posts.json|rm C:\democtm\comments.json|rm C:\democtm\photos.json"
         },
         
         "DoSometingElse" :{
         	"Type": "Job:Command",
			"Description": "This will take a bit longer.",
          	"Command": "sleep 120"
         },
         
		"ShowResult" :{
			"Type": "Job:Command",
          	"Command": "cat C:\democtm\all_in_one_file.json"
         },
         
		"ThisOneWillFail" :{
			"Type": "Job:Command",
          	"Command": "sleep 15"
         },
         			
        "Flow1": {
            "Type": "Flow",
            "Sequence": ["GetPosts", "DoSometingWithIt"]
        },
        
        "Flow2": {
            "Type": "Flow",
        	"Sequence": ["GetComments", "DoSometingWithIt"]
        },
        
        "Flow3": {
            "Type": "Flow",
        	"Sequence": ["GetPhotos", "DoSometingWithIt"]
        },
              

        "Flow4": {
            "Type": "Flow",
        	"Sequence": ["DoSometingWithIt", "CleanUpTheMess"]
        },
             
  		"Flow5": {
            "Type": "Flow",
        	"Sequence": ["DoSometingWithIt", "DoSometingElse"]
        },        
		
		"Flow6": {
            "Type": "Flow",
        	"Sequence": ["DoSometingElse", "ShowResult"]
        },
        
		"Flow7": {
            "Type": "Flow",
        	"Sequence": ["DoSometingElse", "ShowResult"]
        }
    }
}
